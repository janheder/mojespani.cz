    section.o-footerContacts
        .container.o-footerContacts__container
            .row.o-footerContacts__row
                .col-12.col-md-6.o-footerContacts__col
                    .m-emailSubscribe
                        h4.m-emailSubscribe__title Nenechte si ujít žádnou slevu
                        p.m-emailSubscribe__text Odebírejte aktuální informace, oznámení o slevách a novinky na Váš email.
                        form.m-emailSubscribe__form(method="post" action="")
                            .m-emailSubscribe__inputWrap
                                input.m-emailSubscribe__input(type="email" id="sub-email" name="sub-email" required placeholder="Zadejte Vaši emailovou adresu" autocomplete="email")
                                button.btn.m-emailSubscribe__btn(type="submit" id="sub-button" name="sub-button") Odebírat
                            label.m-emailSubscribe__agree
                                input.m-emailSubscribe__check(type="checkbox" name="sub-check" required)
                                span.m-emailSubscribe__checkbox
                                span.m-emailSubscribe__inlineText Odesláním formuláře souhlasím se #[a(href="#") zpracovaním osobních údajů]

                .col-12.col-md-6.o-footerContacts__col
